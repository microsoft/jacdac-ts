{
  "name": "jacscript",
  "version": "0.0.0",
  "description": "Jacscript VM",
  "main": "./dist/jacscript.node.js",
  "module": "./dist/jacscript.js",
  "scripts": {
    "build": "tsc -p src/tsconfig.json && yarn buildnode && yarn buildbrowser",
    "buildbrowser": "esbuild src/jacscript.ts --bundle --outfile=dist/jacscript.bundle.js --external:jacdac-ts",
    "buildnode": "esbuild src/jacscript.ts --bundle --outfile=dist/jacscript.node.js --external:jacdac-ts --platform=node --target=node12",
    "test": "yarn buildnode && node testrunner.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/esprima": "^4.0.3",
    "@types/paho-mqtt": "^1.0.6",
    "esbuild": "^0.14.11",
    "esprima": "^4.0.1",
    "paho-mqtt": "^1.1.0",
    "typescript": "^4.5.4",
    "ws": "^8.4.2"
  },
  "dependencies": {
    "jacdac-ts": "^1.24.4"
  }
}
